{
	"name": "necord",
	"description": "A module for creating Discord bots using NestJS, based on Discord.js.",
	"version": "5.0.0",
	"scripts": {
		"build": "rimraf -rf dist && tsc -p tsconfig.json",
		"prepublish:npm": "npm run build",
		"publish:npm": "release-it",
		"prepublish:dev": "npm run build",
		"publish:dev": "npm publish --access public --tag dev",
		"prepare": "husky install .github/husky",
		"format": "prettier --write \"src/**/*.ts\"",
		"lint": "eslint --ignore-path .gitignore src/**/*.ts",
		"changelog": "git cliff --prepend ./CHANGELOG.md -l -c ./cliff.toml -r ."
	},
	"lint-staged": {
		"*.ts": "npm run format"
	},
	"directories": {
		"lib": "src",
		"test": "test"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"keywords": [
		"nest",
		"nestjs",
		"nestjs-module",
		"discord",
		"discordjs",
		"discord bot",
		"discord bot api",
		"bot",
		"bot api",
		"bot framework"
	],
	"license": "MIT",
	"homepage": "https://necord.org",
	"repository": {
		"type": "git",
		"url": "https://github.com/necordjs/necord"
	},
	"bugs": {
		"url": "https://github.com/necordjs/necord/issues"
	},
	"author": "Alexey Filippov <socket.someone@gmail.com>",
	"contributors": [
		"Alexey Filippov <socket.someone@gmail.com>"
	],
	"dependencies": {
		"@golevelup/nestjs-discovery": "3.0.0"
	},
	"devDependencies": {
		"@commitlint/cli": "17.0.2",
		"@commitlint/config-angular": "17.0.0",
		"@favware/npm-deprecate": "1.0.4",
		"@nestjs/common": "8.4.6",
		"@nestjs/core": "8.4.6",
		"@types/node": "17.0.38",
		"@typescript-eslint/eslint-plugin": "5.27.0",
		"@typescript-eslint/parser": "5.27.0",
		"discord-api-types": "0.33.3",
		"discord.js": "dev",
		"eslint": "8.16.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-prettier": "4.0.0",
		"husky": "8.0.1",
		"jest": "28.1.0",
		"lint-staged": "13.0.0",
		"prettier": "2.6.2",
		"reflect-metadata": "0.1.13",
		"release-it": "15.0.0",
		"rimraf": "3.0.2",
		"rxjs": "7.5.5",
		"ts-mixer": "6.0.1",
		"ts-node": "10.8.0",
		"typescript": "4.7.2"
	},
	"peerDependencies": {
		"@nestjs/common": "^8.0.0",
		"@nestjs/core": "^8.0.0",
		"discord.js": "^13.6.0",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^7.2.0"
	},
	"engines": {
		"node": ">=16.6.0",
		"npm": ">=7.0.0"
	}
}
